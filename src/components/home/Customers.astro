---
const {data} = Astro.props

let clients = []

data.forEach(( sections ) => {

	if ( sections.section === "Clients") {

		const images_ordered = sections.images.sort( ( a,b ) => a.order - b.order)
		clients =  images_ordered

	}

})

import Container from "../../layouts/Container.astro"

// CONSTANTS
import { CDN_LINK } from "../../constants/cdn"
---

<Container>
	<section class="w-full lg:w-[80%] mx-auto my-4">
		<div class="grid grid-cols-3 lg:grid-cols-5 place-items-center gap-y-8 lg:gap-y-16 gap-x-2">
			{

				clients.map(( client) => (
					<img src={ CDN_LINK + client.file } alt="Img not found" />
				))

			}
		</div>
	</section>
</Container>
