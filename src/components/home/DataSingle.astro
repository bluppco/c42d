---
import H1Stylish from "../../atom/H/H1Stylish.astro";

const { data, title, description } = Astro.props;
---

<div class="text-center flex flex-col lg:p-2 gap-4 py-4">
	<h1 class="font-libreBaskerville text-white text-6xl leading-12 lg:leading-5 border-b lg:border-0 pb-2 ">
		{data}
	</h1>
    <div>
		<p class="text-xl lg:text-2xl font-serif opacity-80 py-2">{title}</p>
		<p class="uppercase font-semibold text-xs px-2 lg:px-8">
			{description}
		</p>
    </div>
</div>
