---
import { Icon } from "astro-icon/components";

const { domain, work, project, img, alt } = Astro.props;
---

<div class="flex flex-col lg:flex-row justify-between pt-8 pb-16 border-b">
	<div class="flex order-last lg:order-first flex-col justify-between flex-1 pr-4 gap-16 py-2">
		<div>
			<p class="text-xl lg:text-2xl uppercase font-bold">{domain}</p>
			<p class="tgext-xl lg:text-2xl uppercase font-libreBaskerville">{work}</p>
		</div>
		<div class="flex items-center justify-between">
		<span
			class="font-bold text-xl lg:text-2xl hover:text-brandYellow transition delay-150 cursor-pointer"
			>{project}</span
		>
		<Icon name="arrowYellow" />
		</div>
	</div>

	<img src={img} alt={alt} class="h-56 lg:h-full" />
</div>
