---
const { data } = Astro.props;

import { Icon } from "astro-icon/components"

const formLink =
  "https://c42d.typeform.com/to/zJV3Cx?typeform-source=www.c42d.com"


import H1Stylish from "../../atom/H/H1Stylish.astro";
---

<section class="text-center w-full lg:w-[60%] mx-auto">
	{
		data.map((d) => {
			if (d.section === "Hero") {
			return (
				<>
					<H1Stylish text={d.title} />

					<p class="text-md lg:text-xl p-2 lg:p-4 lg:tracking-wider lg:leading-8 mx-auto text-white">
						{d.description}
					</p>

					<div class="flex justify-center items-center gap-2">
						<a target="_blank" href={formLink}>
							<span class="font-bold text-xl lg:text-2xl p-8 text-white hover:text-brandYellow transition delay-150 cursor-pointer">
								{d.button_text}
							</span>
						</a>

						<Icon name="arrowYellow" font-size="1rem" />
					</div>
				</>
				);
			}
		})
	}

</section>
